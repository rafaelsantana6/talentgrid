{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "root": true,
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 140
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "complexity": {},
      "style": {
        "useTemplate": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "html": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": false,
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "apps/**/*.ts",
      "apps/**/*.tsx",
      "packages/**/*.ts",
      "packages/**/*.tsx"
    ]
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":NODE:",
              ":BLANK_LINE:",
              [
                ":PACKAGE:",
                ":PACKAGE_WITH_PROTOCOL:"
              ],
              ":BLANK_LINE:",
              [
                "~domain/**",
                "~domain"
              ],
              ":BLANK_LINE:",
              [
                "~application/**",
                "~application"
              ],
              ":BLANK_LINE:",
              [
                "~infra/**",
                "~infra"
              ],
              ":BLANK_LINE:",
              [
                "~shared/**",
                "~shared"
              ],
              ":BLANK_LINE:",
              ":ALIAS:",
              ":BLANK_LINE:",
              ":PATH:",
              ":BLANK_LINE:",
              ":URL:"
            ]
          }
        },
        "useSortedAttributes": "on",
        "useSortedKeys": "off",
        "useSortedProperties": "on"
      }
    }
  }
}